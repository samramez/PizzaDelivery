<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_shape"
    android:gravity="center_vertical"
    android:layout_margin="8dp"
    >

    <TextView
        android:id="@+id/x_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Y"
        android:text="@string/x"
        android:layout_alignParentStart="true"
        style="@style/ListItemStyle"
        />

    <EditText
        android:id="@+id/x_cordinate_edit_text"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/x_text"
        android:inputType="number"
        android:maxLength="1"
        android:layout_centerVertical="true"
        style="@style/ListItemStyle.EditText"

        />

    <TextView
        android:id="@+id/y_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/x_cordinate_edit_text"
        tools:text="X"
        android:paddingStart="30dp"
        android:text="@string/y"
        style="@style/ListItemStyle"
        />

    <EditText
        android:id="@+id/y_cordinate_edit_text"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/y_text"
        style="@style/ListItemStyle.EditText"
        />

    <ImageButton
        android:id="@+id/deleteRowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_remove_circle_black_24dp"
        android:background="@color/light_grey"
        android:layout_marginStart="40dp"
        style="@style/ListItemStyle"
        />

</RelativeLayout>